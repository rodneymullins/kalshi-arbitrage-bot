# ============================================
# Kalshi Bot Configuration
# ============================================

# ========================
# API Credentials
# ========================
KALSHI_KEY_ID=your_key_id_here

# ========================
# Bot Mode
# ========================
# DRY     = Paper trading (no real orders)
# LIVE    = Real trading (use with caution!)
# BACKTEST = Analysis only
BOT_MODE=DRY

# ========================
# Financial Settings
# ========================
# Your available bankroll for trading
BANKROLL=29.40

# Your 30-day trading volume (affects fee tier)
# $0-2,499 = 7.0% fees (default)
# $2,500-9,999 = 5.5% fees
# $10,000-24,999 = 4.5% fees
# $25,000+ = 3.5% fees
VOLUME_30D=0

# ========================
# Trading Thresholds
# ========================
# Minimum market volume required to trade ($)
MIN_VOLUME=1000

# Minimum contract price ($)
MIN_PRICE=0.20

# Minimum net profit after fees required to execute trade ($)
# Recommended: $0.50 minimum to account for slippage
MIN_NET_PROFIT=0.50

# ========================
# Strategy Parameters
# ========================
# Expected edge (probability advantage)
# 0.05 = 5% edge
EDGE=0.05

# Maximum Kelly fraction (risk control)
# 0.10 = Max 10% of bankroll per trade
# Lower = more conservative, higher = more aggressive
MAX_KELLY_FRACTION=0.10

# Target return percentage for profit taking
# Used to estimate exit price for fee calculations
TARGET_RETURN_PCT=10

# ========================
# Risk Management
# ========================
# Maximum consecutive losses before halting
MAX_CONSECUTIVE_LOSSES=3

# Seconds between market checks
CHECK_INTERVAL_SEC=10

# Maximum consecutive "no price" responses before halting
# 30 = 5 minutes at 10-second intervals
MAX_NO_PRICE_COUNT=30
